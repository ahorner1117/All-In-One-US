    },
    {
      "type": "range",
      "id": "gap",
      "label": "Content Gap",
      "info": "Gap between header content and team cards",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
