{% liquid
  # Calculate max items based on layout
  if section.settings.layout_type == 'carousel'
    assign max_items = section.blocks.size
  elsif section.settings.layout_type == 'grid'
    assign max_items = section.blocks.size
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if section.settings.heading != blank %}
    <div class="meet-the-team__header" style="text-align: {{ section.settings.heading_alignment }};">
      <h2 class="meet-the-team__heading">{{ section.settings.heading }}</h2>
    </div>
  {% endif %}

  {% capture list_items %}
    {% for block in section.blocks %}
      <div class="resource-list__item team-member-card-wrapper" {{ block.shopify_attributes }}>
        <div class="team-member-card">
          {% if block.settings.image != blank %}
            <div class="team-member-card__image">
              {{
                block.settings.image
                | image_url: width: 600
                | image_tag:
                  loading: 'lazy',
                  width: block.settings.image.width,
                  height: block.settings.image.height,
                  alt: block.settings.name
              }}
            </div>
          {% else %}
            <div class="team-member-card__image team-member-card__image--placeholder">
              <div class="team-member-card__placeholder-icon">üêæ</div>
            </div>
          {% endif %}

          <div class="team-member-card__content">
            {% if block.settings.name != blank %}
              <h3 class="team-member-card__name">{{ block.settings.name }}</h3>
            {% endif %}

            {% if block.settings.position != blank %}
              <p class="team-member-card__position">{{ block.settings.position }}</p>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="team-member-card__description">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% unless forloop.last %}
        <!--@list/split-->
      {% endunless %}
    {% endfor %}
  {% endcapture %}

  {% liquid
    # Create an array from the list items to be used for different layout types
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'teamCarousel',
    slide_count: max_items,
    content_type: 'team',
    test_id: 'meet-the-team-list'
  %}
</div>

{% schema %}
