{% stylesheet %}
  /* Section Header Styles */
  .companies-we-work-with__header {
    margin-bottom: var(--gap-xl);
  }

  .companies-we-work-with__heading {
    font-size: 3rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--color-foreground);
  }

  .companies-we-work-with__subheading {
    font-size: var(--font-size-lg);
    margin: 0;
    color: var(--color-foreground);
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .companies-we-work-with__header {
      margin-bottom: var(--gap-lg);
    }

    .companies-we-work-with__heading {
      font-size: 2.5rem;
    }

    .companies-we-work-with__subheading {
      font-size: var(--font-size-md);
    }
  }

  /* Company Card Styles */
  .company-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: var(--color-background);
    border-radius: var(--style-border-radius-inputs);
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(var(--color-foreground-rgb), 0.1);
  }

  .company-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  /* Image container - maintains natural aspect ratio */
  .company-card__image {
    width: 100%;
    overflow: hidden;
    background-color: var(--color-input-background);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    min-height: 150px;
  }

  /* Images maintain natural aspect ratio with consistent width */
  .company-card__image img {
    width: 100%;
    height: auto;
    max-height: {{ section.settings.image_max_height }}px;
    object-fit: contain;
    display: block;
  }

  .company-card__image--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(var(--color-foreground-rgb), 0.05) 0%, rgba(var(--color-foreground-rgb), 0.1) 100%);
  }

  .company-card__placeholder-icon {
    opacity: 0.3;
    color: var(--color-foreground);
  }

  .company-card__content {
    padding: var(--padding-lg);
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    flex: 1;
    text-align: center;
  }

  .company-card__name {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin: 0;
    color: var(--color-foreground);
  }

  .company-card__description {
    font-size: var(--font-size-sm);
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.8;
  }

  .company-card__description p {
    margin: 0;
  }

  .company-card__description p:not(:last-child) {
    margin-bottom: var(--gap-xs);
  }

  /* Resource list item wrapper */
  .company-card-wrapper {
    container-type: inline-size;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 749px) {
    .company-card__content {
      padding: var(--padding-md);
    }

    .company-card__name {
      font-size: var(--font-size-md);
    }

    .company-card__image {
      padding: 1rem;
    }
  }

  /* Grid layout specific styles */
  .resource-list--grid .company-card {
    border: 1px solid rgba(var(--color-foreground-rgb), 0.1);
  }

  /* Carousel layout specific styles */
  .resource-list__carousel .company-card {
    border: 1px solid rgba(var(--color-foreground-rgb), 0.1);
  }
{% endstylesheet %}
