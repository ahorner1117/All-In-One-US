{% liquid
  # Calculate max items based on layout
  if section.settings.layout_type == 'carousel'
    assign max_items = section.blocks.size
  elsif section.settings.layout_type == 'grid'
    assign max_items = section.blocks.size
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if section.settings.heading != blank %}
    <div class="companies-we-work-with__header" style="text-align: {{ section.settings.heading_alignment }};">
      <h2 class="companies-we-work-with__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="companies-we-work-with__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% capture list_items %}
    {% for block in section.blocks %}
      <div class="resource-list__item company-card-wrapper" {{ block.shopify_attributes }}>
        <div class="company-card">
          {% if block.settings.image != blank %}
            <div class="company-card__image">
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  width: block.settings.image.width,
                  height: block.settings.image.height,
                  alt: block.settings.company_name
              }}
            </div>
          {% else %}
            <div class="company-card__image company-card__image--placeholder">
              <div class="company-card__placeholder-icon">
                <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="10" y="10" width="40" height="40" stroke="currentColor" stroke-width="2" fill="none"/>
                  <circle cx="23" cy="25" r="4" fill="currentColor"/>
                  <polyline points="10,45 20,35 30,40 50,20" stroke="currentColor" stroke-width="2" fill="none"/>
                </svg>
              </div>
            </div>
          {% endif %}

          <div class="company-card__content">
            {% if block.settings.company_name != blank %}
              <h3 class="company-card__name">{{ block.settings.company_name }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="company-card__description">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% unless forloop.last %}
        <!--@list/split-->
      {% endunless %}
    {% endfor %}
  {% endcapture %}

  {% liquid
    # Create an array from the list items to be used for different layout types
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'companiesCarousel',
    slide_count: max_items,
    content_type: 'companies',
    test_id: 'companies-we-work-with-list'
  %}
</div>

{% schema %}
