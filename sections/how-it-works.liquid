{% comment %}
  How It Works Section
  Displays a three-column layout explaining the process with a CTA button
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section section--{{ section.settings.section_width }} page-width color-{{ section.settings.color_scheme }}">
  <div
    class="how-it-works-wrapper spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <!-- Header -->
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="how-it-works__header">
        {% if section.settings.heading != blank %}
          <h2 class="how-it-works__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="how-it-works__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Steps/Cards -->
    <div class="how-it-works__cards">
      {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="how-it-works__card" {{ block.shopify_attributes }}>
            <!-- Icon/Image -->
            <div class="how-it-works__card-icon">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 900 }} 900w,
                          {{ block.settings.image | image_url: width: 1200 }} 1200w"
                  sizes="(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw"
                  alt="{{ block.settings.title | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="lazy"
                  class="how-it-works__card-image"
                >
              {% else %}
                <span class="how-it-works__card-number">{{ forloop.index }}</span>
              {% endif %}
            </div>

            <!-- Content -->
            <div class="how-it-works__card-content">
              {% if block.settings.title != blank %}
                <h3 class="how-it-works__card-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="how-it-works__card-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- CTA Button -->
    <div class="how-it-works__cta">
      {% if customer %}
        <a href="/pages/my-pets" class="button button--primary">
          {{ section.settings.logged_in_button_label | default: "Manage My Pets" }}
        </a>
      {% else %}
        <a href="/account/register" class="button button--primary">
          {{ section.settings.button_label | default: "Get Started" }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "How It Works",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get started in three easy steps"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label (Not Logged In)",
      "default": "Get Started"
    },
    {
      "type": "text",
      "id": "logged_in_button_label",
      "label": "Button Label (Logged In)",
      "default": "Manage My Pets",
      "info": "Button text shown to logged-in customers"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top Padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom Padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image",
          "info": "Upload an image for this step. If no image is provided, a numbered circle will appear."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Step Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Describe this step in your process"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "category": "Custom",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "title": "Tell Us About Your Pet",
            "description": "Answer a few questions about your furry friend's preferences, allergies, and size."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "We Curate Your Box",
            "description": "Our team handpicks toys, treats, and goodies personalized just for your pet."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Delivered Monthly",
            "description": "Get excited! Your customized box arrives right to your doorstep every month."
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .how-it-works-wrapper {
    width: 100%;
  }

  /* Header */
  .how-it-works__header {
    text-align: center;
    margin: 0 auto var(--gap-xxl) auto;
  }

  .how-it-works__heading {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-foreground);
    margin: 0 0 var(--gap-md) 0;
    line-height: 1.2;
  }

  .how-it-works__subheading {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--color-foreground);
    opacity: 0.8;
    margin-bottom: 12px;
    line-height: 1.6;
  }

  /* Cards Grid */
  .how-it-works__cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    margin-top: 24px !important;
    gap: 48px;
    margin-bottom: var(--gap-xxl);
  }

  @media screen and (max-width: 989px) {
    .how-it-works__cards {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  /* Individual Card */
  .how-it-works__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--gap-lg);
    padding: 12px 24px;
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-input-background);
    border: 1px solid var(--color-input-border);
    transition: all 0.3s ease;
  }

  @media screen and (max-width: 749px) {
    .how-it-works__card {
      padding: 32px;
    }
  }



  /* Icon/Image/Number */
  .how-it-works__card-icon {
    width: 100%;
    aspect-ratio: 16 / 9;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--style-border-radius-inputs);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary, var(--color-primary)) 100%);
    overflow: hidden;
    flex-shrink: 0;
  }

  .how-it-works__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .how-it-works__card-number {
    font-size: 4rem;
    font-weight: 700;
    color: white;
    line-height: 1;
  }

  /* Card Content */
  .how-it-works__card-content {
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
  }

  .how-it-works__card-title {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 600;
    color: var(--color-foreground);
    margin: 0;
    line-height: 1.3;
  }

  .how-it-works__card-description {
    font-size: 16px;
    color: var(--color-foreground);
    opacity: 0.8;
    margin: 0;
    line-height: 1.6;
  }

  /* CTA */
  .how-it-works__cta {
    display: flex;
    justify-content: center;
    margin-top: var(--gap-xl);
  }

  .how-it-works__cta .button {
    min-width: 200px;
  }

  @media screen and (max-width: 749px) {
    .how-it-works__cta .button {
      width: 100%;
    }
  }

  /* Alternative Layout: Horizontal Cards on Desktop */
  @media screen and (min-width: 990px) {
    .how-it-works__card--horizontal {
      flex-direction: row;
      text-align: left;
      align-items: flex-start;
    }

    .how-it-works__card--horizontal .how-it-works__card-icon {
      width: 80px;
      height: 80px;
      flex-shrink: 0;
    }

    .how-it-works__card--horizontal .how-it-works__card-emoji {
      font-size: 2.5rem;
    }

    .how-it-works__card--horizontal .how-it-works__card-number {
      font-size: 2rem;
    }
  }
{% endstylesheet %}
